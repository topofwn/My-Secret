<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyCoffeeButton">
        <attr name="shadowEnabled" format="boolean" />
        <attr name="shadowColor" format="color" />
        <attr name="shadowHeight" format="dimension" />
        <attr name="paddingTop" format="dimension" />
        <attr name="paddingBottom" format="dimension" />
        <attr name="paddingLeft" format="dimension" />
        <attr name="paddingRight" format="dimension" />
        <attr name="buttonColor" format="color" />
        <attr name="buttonDisableColor" format="color" />
        <attr name="buttonPressedColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textPressedColor" format="color" />
        <attr name="buttonDrawable" format="reference" />
        <attr name="isSetSelected" format="boolean" />
        <attr name="buttonDrawableAlign" format="enum" >
            <enum name="left" value="0"/>
            <enum name="top" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
    </declare-styleable>

</resources>
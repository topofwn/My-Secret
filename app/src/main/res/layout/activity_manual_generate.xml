<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_univserse">
    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar" />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application:"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:padding="5dp"
        android:id="@+id/txtApplication"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp"
            android:imeOptions="actionNext"
            android:id="@+id/edtApplication"
            android:background="@color/white"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toRightOf="@+id/txtApplication"
            app:layout_constraintRight_toRightOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:padding="5dp"
            android:id="@+id/txtKeyPWD"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:gravity="center"
            android:inputType="textPassword"
            android:background="@color/white"
            android:layout_marginLeft="15dp"
            android:imeOptions="actionDone"
            android:id="@+id/edtPassword"
            app:layout_constraintLeft_toRightOf="@+id/txtKeyPWD"
            app:layout_constraintRight_toRightOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:id="@+id/btnSave"
        android:text="Save"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_change_state"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:id="@+id/btnClear"
        android:text="Clear"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_change_state"
        />
</LinearLayout>
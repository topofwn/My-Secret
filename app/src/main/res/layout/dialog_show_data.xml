<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/transparent_black_forty"
    android:gravity="center">
<RelativeLayout
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:id="@+id/fieldDialog"
    android:layout_margin="50dp"
    android:background="@color/white"

    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    >
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:id="@+id/btnClose"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="Key name:"
        android:layout_centerInParent="true"
        android:background="@color/gray"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:id="@+id/txtKeyName"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="Your key:"
        android:background="@color/gray"
        android:textSize="18dp"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:id="@+id/txtYourKey"
        android:layout_below="@id/txtKeyName"
        android:layout_marginTop="20dp"
        />
    <ImageButton

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/btnCopyClipboard"
        android:layout_below="@id/txtKeyName"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/txtYourKey"
        android:src="@drawable/ic_content_copy_black_24dp"
        />
</RelativeLayout>
</android.support.constraint.ConstraintLayout>
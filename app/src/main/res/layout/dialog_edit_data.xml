<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent_black_forty"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/fieldDialog"
        android:background="@color/white"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:id="@+id/btnClose"

            android:src="@drawable/ic_close_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:layout_centerHorizontal="true"
            >
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Key name:"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:background="@color/gray"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:id="@+id/edtKeyName"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:gravity="center"
                android:text="Your key:"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@color/gray"
                android:textSize="18dp"
                android:layout_centerHorizontal= "true"
                android:textColor="@color/black"
                android:id="@+id/edtYourKey"
                android:layout_below="@+id/edtKeyName"
                android:layout_marginTop="20dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_change_state"
                android:id="@+id/btnSave"
                android:layout_below="@id/edtYourKey"
                android:layout_marginTop="20dp"
                android:text="save"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="15dp"
                />


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>